<?xml version="1.0" encoding="UTF-8"?>
<!-- /usr/share/mime/packages/DevAssistant-action.xml -->
<!-- sudo update-mime-database /usr/share/mime -->

<mime-info xmlns="http://www.freedesktop.org/standards/shared-mime-info">

  <mime-type type="all/allfiles">
    <action name="DevAssistant">
      <label>文件处理</label>
      <commandline>/usr/local/bin/DevAssistant_loader %f</commandline>
    </action>
  </mime-type>

  <mime-type type="inode/directory">
    <action name="DevAssistant">
      <label>文件夹处理</label>
      <commandline>/usr/local/bin/DevAssistant_loader %F</commandline>
    </action>
  </mime-type>
</mime-info>
